@model IEnumerable<Inventory_App.Resources.SalesResource>

@{
    ViewBag.Title = "SalesList";
}

<div class="page-header">
    <div class="page-title">
        <h4>SALE LIST</h4>
        <h6>Manage your sales</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddSales","Sales")" class="btn btn-added">
            <img src="~/Content/icons/plus.svg" alt="img">Add New Sales
        </a>
    </div>
</div>


<div class="wordset">
    <ul>
        <li>
            <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
        </li>
        <li>
            <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
        </li>
        <li>
            <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
        </li>
    </ul>
</div>



<div class="table-responsive">
    <table class="table datanew">
        <thead>
            <tr>
                <th>
                    <label class="checkboxs">
                        <input type="checkbox" id="select-all">
                        <span class="checkmarks"></span>
                    </label>
                </th>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Total(₦)</th>
                <th>Sold By</th>

                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label class="checkboxs">
                            <input type="checkbox">
                            <span class="checkmarks"></span>
                        </label>
                    </td>
                    <td>@Html.DisplayFor(modelitem => item.Customer.name)</td>


                    <td>@Html.DisplayFor(modelitem => item.Date)</td>
                    <td>@Html.DisplayFor(modelitem => item.Total)</td>
                    <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>


                    <td>
                        <a class="me-3" href="@Url.Action("SalesDetails", "Sales",new {id=item.Id})">
                            <img src="~/Content/icons/eye.svg" alt="img">
                        </a>
                    </td>
                    <td>
                        <a class="me-3" href="@Url.Action("DeleteSales", "Sales", new { id = item.Id })" onclick="return confirm('Are you sure you want to delete this Sale?');">
                            <img src="~/Content/icons/delete.svg" alt="img">
                        </a>

                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>


