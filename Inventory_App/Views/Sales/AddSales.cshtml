@model Inventory_App.Resources.SalesResource

@{
    ViewBag.Title = "AddSales";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("", new { style = "color: red; background-color: #f8d7da; padding: 10px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 4px; border-bottom: 5px solid #dc3545;" }  )

    <div class="page-header">
        <div class="page-title">
            <h4>Add Sales </h4>
            <h6>Add/Update Sales </h6>

        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Customer Name</label>
                        <div class="row">
                            <div class="col-lg-10 col-sm-10 col-10">

                                @Html.DropDownListFor(model => model.CustomerID, new SelectList(ViewBag.Customer, "Id", "Name"), "Select Customer", new { @class = "form-control" })

                            </div>

                        </div>
                    </div>
                </div>


                <div class="row">

                    <div class="table-responsive">
                        <table class="table datanew">
                            <thead>
                                <tr>
                                    <th>Product Image</th>

                                    <th>Product </th>
                                    <th> Quantity</th>
                                    <th> Price</th>


                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.SoldProductResources.Count; i++)
                                {
                                    <tr>
                                        @Html.HiddenFor(model => Model.SoldProductResources[i].Name)
                                        @Html.HiddenFor(model => Model.SoldProductResources[i].ProductID)
                                        @Html.HiddenFor(model => Model.SoldProductResources[i].Image)
                                        @Html.HiddenFor(model => Model.SoldProductResources[i].Price)




                                        <td class="productimgname">
                                            <a class="product-img">
                                                <img src=@Model.SoldProductResources[i].Image alt="Image" />

                                            </a>
                                        </td>

                                        <td>@Html.DisplayFor(model => Model.SoldProductResources[i].Name)</td>

                                        <td>
                                            @Html.EditorFor(model => Model.SoldProductResources[i].Quantity, new { htmlAttributes = new { type = "number", min = "0", disableUpDown = "true" } })




                                        </td>


                                        <td>@Html.DisplayFor(model => Model.SoldProductResources[i].Price)</td>




                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                    <br />



                    <div class="col-lg-12">
                        <input type="submit" value="Submit" class="btn btn-submit me-2">


                        <a href="@Url.Action("SalesList", "Sales")" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </div>


        </div>
    </div>

}

