<div class="table-responsive">
    <table class="table datanew">
        <thead>
            <tr>
                <th>
                    <label class="checkboxs">
                        <input type="checkbox" id="select-all">
                        <span class="checkmarks"></span>
                    </label>
                </th>
                <th>Supplier Name</th>
                <th>Date</th>
                <th>Grand Total(₦)</th>
                <th>Created By</th>

                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label class="checkboxs">
                            <input type="checkbox">
                            <span class="checkmarks"></span>
                        </label>
                    </td>
                    <td>@Html.DisplayFor(modelitem => item.Supplier.name)</td>

                        @Html.HiddenFor(c => item.CreatedBy)
                    <td>@Html.DisplayFor(modelitem => item.Date)</td>
                    <td>@Html.DisplayFor(modelitem => item.Total)</td>
                    <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>


                    <td>
                        <a class="me-3" href="@Url.Action("PurchaseDetails", "Purchases",new {id=item.ID})">
                            <img src="~/Content/icons/eye.svg" alt="img">
                        </a>
                    </td>
                    <td>
                        <a class="me-3" href="@Url.Action("deletepurchase", "Purchases", new { id = item.ID })" onclick="return confirm('Are you sure you want to delete this purchase?');">
                            <img src="~/Content/icons/delete.svg" alt="img">
                        </a>

                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>


