@model Inventory_App.Resources.CategoryResource

@{
    ViewBag.Title = "editcategory";
}


@using (Html.BeginForm("editcategory", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))

{

    @Html.AntiForgeryToken()

    <div class="page-header">
        <div class="page-title">
            <h4>Product Edit Category</h4>
            <h6>Edit a product Category</h6>
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Category Name</label>
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="col-lg-12">
                    <div class="form-group">
                        <div style="display:flex">

                            <label>Category Image</label>
                        </div>
                        <div class="image-upload">
                            @Html.TextBoxFor(m => m.ImagePath, new { type = "file" })

                            <div class="image-uploads">
                                <img src="~/Content/icons/upload.svg" alt="img">
                                <h4>Drag and drop a file to upload</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Update" class="btn btn-submit me-2" />
                    <a href="@Url.Action("CategoryList", "Products")" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}