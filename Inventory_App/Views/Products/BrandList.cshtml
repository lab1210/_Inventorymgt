@model IEnumerable<Inventory_App.Models.Brand>

@{
    ViewBag.Title = "BrandList";
}


<div class="page-header">
    <div class="page-title">
        <h4>Brand List</h4>
        <h6>Manage your Brand</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddBrand","Products")" class="btn btn-added"><img src="~/Content/icons/plus.svg" class="me-2" alt="img">Add Brand</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-path">
                    <a class="btn btn-filter" id="filter_search">
                        <img src="~/Content/icons/filter.svg" alt="img">
                        <span><img src="~/Content/icons/closes.svg" alt="img"></span>
                    </a>
                </div>

            </div>
            <div class="wordset">
                <ul>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>
        </div>
        @using (Html.BeginForm("BrandList", "Products", FormMethod.Get))
        {
            <div class="card" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                @Html.TextBox("searchname", null, new { placeholder = "Enter Name" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                @Html.TextBox("searchbydescr", null, new { placeholder = "Enter Description" })

                            </div>
                        </div>
                        <div class="col-lg-1 col-sm-6 col-12 ms-auto">
                            <div class="form-group">
                                <input type="submit" value="Filter" class="btn btn-filters ms-auto" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table datanew ">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Brand Name</th>
                        <th>Brand Description</th>
                        <th>Created By</th>

                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>

                            <td> @Html.DisplayFor(modelitem => item.Name)</td>
                            <td>  @Html.DisplayFor(modelitem => item.Description)</td>
                            <td>  @Html.DisplayFor(modelitem => item.CreatedBy)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("editbrand", "Products", new {ID=item.Id})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3" href="@Url.Action("DeleteBrand", "Products", new {ID=item.Id})" onclick="return confirm('Are you sure you want to delete this Brand?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
