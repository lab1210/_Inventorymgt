@model IEnumerable<Inventory_App.Resources.CategoryResource>

@{
    ViewBag.Title = "CategoryList";
}

<div class="page-header">
    <div class="page-title">
        <h4>Product Category list</h4>
        <h6>View/Search product Category</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddCategory","Products")" class="btn btn-added">
            <img src="~/Content/icons/plus.svg" class="me-1" alt="img">Add Category
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-path">
                    <a class="btn btn-filter" id="filter_search">
                        <img src="~/Content/icons/filter.svg" alt="img">
                        <span><img src="~/Content/icons/closes.svg" alt="img"></span>
                    </a>
                </div>

            </div>
            <div class="wordset">
                <ul>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>
        </div>
        @using (Html.BeginForm("CategoryList", "Products", FormMethod.Get))
        {
            <div class="card" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-2 col-sm-6 col-12">
                            <div class="form-group">
                                @Html.TextBox("searchname", null, new { placeholder = "Enter name" })

                            </div>
                        </div>


                        <div class="col-lg-1 col-sm-6 col-12 ms-auto">
                            <div class="form-group">
                                <input type="submit" value="Filter" class="btn btn-filters ms-auto">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table datanew">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Image</th>
                        <th>Category name</th>
                        <th>Category Code</th>
                        <th>Created By</th>

                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td class="productimgname">
                                <a href="javascript:void(0);" class="product-img">
                                    <img src=@item.ImagePath alt=@Html.DisplayFor(modelitem => item.Name)>
                                </a>
                                <a href="javascript:void(0);"></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Id)

                            </td>
                            <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("editcategory", "Products", new {ID=item.Id})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3" href="@Url.Action("DeleteCategory", "Products", new {ID=item.Id})" onclick="return confirm('Are you sure you want to delete this Category?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }`
                </tbody>
            </table>
        </div>
    </div>
</div>

