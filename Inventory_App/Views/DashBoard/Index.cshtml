
@{
    ViewBag.Title = "Index";
}

<div class="row">

    <div class="col-lg-10 col-sm-6 col-12">
        <div class="dash-widget dash2">
            <div class="dash-widgetimg">
                <span><img src="~/Content/icons/dash3.svg" alt="img"></span>
            </div>
            <div class="dash-widgetcontent">
                <h5>₦<span class="counters" data-count="@ViewBag.SalesAmount"></span></h5>
                <h6>Total Sales Amount</h6>
            </div>
        </div>
    </div>
    <div class="col-lg-10 col-sm-6 col-12">
        <div class="dash-widget dash3">
            <div class="dash-widgetimg">
                <span><img src="~/Content/icons/dash4.svg" alt="img"></span>
            </div>
            <div class="dash-widgetcontent">
                <h5>₦<span class="counters" data-count="@ViewBag.PurchaseAmount"></span></h5>
                <h6>Total Purchase Amount</h6>
            </div>
        </div>
    </div>
</div>
    <div>
        <div class="col-lg-3 col-sm-6 col-12 d-flex">
            <div class="dash-count">
                <div class="dash-counts">
                    <h4>@ViewBag.Customercount</h4>
                    <h5>Customers</h5>
                </div>
                <div class="dash-imgs">
                    <i data-feather="user"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12 d-flex">
            <div class="dash-count das1">
                <div class="dash-counts">
                    <h4>@ViewBag.SupplierCount</h4>
                    <h5>Suppliers</h5>
                </div>
                <div class="dash-imgs">
                    <i data-feather="user-check"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12 d-flex">
            <div class="dash-count das2">
                <div class="dash-counts">
                    <h4>@ViewBag.Purchasecount</h4>
                    <h5>Purchase Invoice</h5>
                </div>
                <div class="dash-imgs">
                    <i data-feather="file-text"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12 d-flex">
            <div class="dash-count das3">
                <div class="dash-counts">
                    <h4>@ViewBag.Salecount</h4>
                    <h5>Sales Invoice</h5>
                </div>
                <div class="dash-imgs">
                    <i data-feather="file"></i>
                </div>
            </div>
        </div>
    </div>





