@model Inventory_App.Models.Customer

@{
    ViewBag.Title = "EditCustomer";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-header">
        <div class="page-title">
            <h4>Edit Customer Management</h4>
            <h6>Edit/Update Customer</h6>
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Customer Name</label>
                        @Html.EditorFor(model => model.name)
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                

                <div class="col-lg-12">
                    <input type="submit" value="Update" class="btn btn-submit me-2" />

                    <a href="@Url.Action("CustomerList", "Peoples")" class="btn btn-cancel">Cancel</a>

                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


