@model IEnumerable<Inventory_App.Models.Customer>

@{
    ViewBag.Title = "CustomerList";
}

<div class="page-header">
    <div class="page-title">
        <h4>Customer List</h4>
        <h6>Manage your Customers</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddCustomer","Peoples")" class="btn btn-added"><img src="~/Content/icons/plus.svg" alt="img">Add Customer</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-path">
                    <a class="btn btn-filter" id="filter_search">
                        <img src="~/Content/icons/filter.svg" alt="img">
                        <span><img src="~/Content/icons/closes.svg" alt="img"></span>
                    </a>
                </div>

            </div>
            <div class="wordset">
                <ul>
                    <li>
                        <a id="saveAsPdf" data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="saveAsExcel" data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="print" data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>

        </div>
        @using (Html.BeginForm("CustomerList", "Peoples", FormMethod.Get))
        {
            <div class="card" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">

                        <div class="col-lg-2 col-sm-6 col-12">
                            <div class="form-group">


                                @Html.TextBox("searchname", null, new { placeholder = "Enter name" })


                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-6 col-12">
                            <div class="form-group">


                                @Html.TextBox("searchphone", null, new { placeholder = "Enter Phone" })


                            </div>
                        </div>

                        <div class="col-lg-1 col-sm-6 col-12  ms-auto">
                            <div class="form-group">

                                <input type="submit" value="Filter" class="btn btn-filters ms-auto">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table datanew">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Customer Name</th>
                        <th>Customer Code</th>
                        <th>Phone</th>
                        <th>Created By</th>


                        <th></th>
                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var Item in Model)
                    {
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td>


                                @Html.DisplayFor(modelitem => Item.name)
                            </td>
                            <td>@Html.DisplayFor(modelitem => Item.id)</td>
                            <td>@Html.DisplayFor(modelitem => Item.Phone)</td>
                            <td>@Html.DisplayFor(modelitem => Item.CreatedBy)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("EditCustomer", "Peoples", new {ID=Item.id})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3" href="@Url.Action("DeleteConfirmedCustomer", "Peoples", new { ID = Item.id })" onclick="return confirm('Are you sure you want to delete this ?');">

                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>





