@model Inventory_App.Models.City

@{
    ViewBag.Title = "NewState";
}

<div class="page-header">
    <div class="page-title">
        <h4>Places Management</h4>
        <h6>Add/Update Places</h6>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CityName)
                        @Html.EditorFor(model => model.CityName)
                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Country</label>
                        @Html.DropDownListFor(model => model.CountryID, ViewBag.CountryList as SelectList, "Select a country", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CountryID, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-lg-12">
                    <input type="submit" value="Submit" class="btn btn-submit me-2">
                    <a href="@Url.Action("StateList", "Places")" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}