@model IEnumerable<Inventory_App.Models.City>

@{
    ViewBag.Title = "StateList";
}

<div class="page-header">
    <div class="page-title">
        <h4>City List</h4>
        <h6>Manage your City</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("NewState","Places")" class="btn btn-added"><img src="~/Content/icons/plus.svg" alt="img" class="me-2">Add City</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">

            <div class="wordset">
                <ul>
                    <li>
                        <a id="saveAsPdf" data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="saveAsExcel" data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="print" data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="table-responsive">
            <table class="table datanew  ">

                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>City Name</th>
                        <th>Country Name</th>
                        <th>Status</th>
                        <th>Created By</th>

                        <th></th>

                        <th></th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td>@Html.DisplayFor(modelitem => item.CityName) </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Country.CountryName)
                            </td>
                            <td>

                                @if (item.status)
                                {


                                    <input class="check" type="checkbox" id="'user1' + @item.ID" checked disabled>
                                    <label class="checktoggle" for="'user1' + @item.ID"></label>

                                }
                                else
                                {

                                    <div class="form-check form-switch">
                                        <input class="check" type="checkbox" id="'user1' + @item.ID" disabled>
                                        <label class="checktoggle" for="'user1' + @item.ID"></label>
                                    </div>
                                }

                            </td>
                            <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("EditState", "Places", new {ID=item.ID})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>

                            <td>
                                <a class="me-3" href="@Url.Action("DeleteConfirmedState", "Places", new { ID = item.ID })" onclick="return confirm('Are you sure you want to delete this?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>





