@model IEnumerable<Inventory_App.Models.Country>

@{
    ViewBag.Title = "CountryList";
}

<div class="page-header">
    <div class="page-title">
        <h4>Country List</h4>
        <h6>Manage your Countries</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("NewCountry","Places")" class="btn btn-added">
            <img src="~/Content/icons/plus.svg" alt="img" class="me-2">Add Country
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">

            <div class="wordset">
                <ul>
                    <li>
                        <a id="saveAsPdf" data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="saveAsExcel" data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a id="print" data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>


        </div>



        <div class="table-responsive">
            <table class="table datanew">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Country Name</th>
                        <th>Status</th>
                        <th>Created By</th>

                        <th></th>

                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td> @Html.DisplayFor(modelitem => item.CountryName)</td>
                            <td>
                                @if (item.Status)
                                {


                                    <input class="check" type="checkbox" id="@item.ID" checked disabled>
                                    <label class="checktoggle" for=" @item.ID"></label>

                                }
                                else
                                {

                                    <div class="form-check form-switch">
                                        <input class="check" type="checkbox" id="@item.ID" disabled>
                                        <label class="checktoggle" for=" @item.ID"></label>
                                    </div>
                                }

                            </td>
                            <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>


                            <td>
                                <a class="me-3" href="@Url.Action("EditCountry", "Places", new { ID = item.ID })">

                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3" href="@Url.Action("DeleteConfirmedCountry", "Places", new { ID = item.ID })" onclick="return confirm('Are you sure you want to delete this ?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>

                            </td>

                        </tr>
                    </tbody>
                }
            </table>

        </div>
    </div>
</div>






