@model Inventory_App.Models.Country
@{
    ViewBag.Title = "NewCountry";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-header">
        <div class="page-title">
            <h4>Places Management</h4>
            <h6>Add/Update Places</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CountryName)
                        @Html.EditorFor(model => model.CountryName)
                        @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-lg-12">
                    <input type="submit" value="Submit" class="btn btn-submit me-2">
                    <a href="@Url.Action("CountryList", "Places")" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


