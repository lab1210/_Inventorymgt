@model Inventory_App.Models.City

@{
    ViewBag.Title = "EditState";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-header">
        <div class="page-title">
            <h4>Places Management</h4>
            <h6>Edit/Update Places</h6>
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CityName)
                        @Html.EditorFor(model => model.CityName)
                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Country</label>
                        @Html.DropDownListFor(model => model.CountryID, ViewBag.CountryList as SelectList, "Select a country", new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    @Html.EditorFor(model => model.status)



                </div>

                <div class="col-lg-12">
                    <input type="submit" value="Update" class="btn btn-submit me-2">
                    <a class="btn btn-cancel" href="@Url.Action("StateList","Places")">Cancel </a>
                </div>
            </div>
        </div>
    </div>
}