@model IEnumerable<Inventory_App.Models.Expense>

@{
    ViewBag.Title = "ExpenseList";
}

<div class="page-header">
    <div class="page-title">
        <h4>Expenses LIST </h4>
        <h6>Manage your purchases</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddExpense","Expenses")" class="btn btn-added"><img src="~/Content/icons/plus.svg" class="me-2" alt="img">Add New Expense</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-path">
                    <a class="btn btn-filter" id="filter_search">
                        <img src="~/Content/icons/filter.svg" alt="img">
                        <span><img src="~/Content/icons/closes.svg" alt="img"></span>
                    </a>
                </div>

            </div>
           @* <div class="wordset">
                <ul>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/Content/icons/pdf.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/Content/icons/excel.svg" alt="img"></a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/Content/icons/printer.svg" alt="img"></a>
                    </li>
                </ul>
            </div>*@
        </div>
        @using (Html.BeginForm("ExpenseList", "Expenses", FormMethod.Get))
        {
            <div class="card" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-2 col-sm-6 col-12">
                            <div class="form-group">


                                @Html.TextBox("searchname", null, new { placeholder = "Enter name" })


                            </div>
                        </div>

                        <div class="col-lg-1 col-sm-6 col-12 ms-auto">
                            <div class="form-group">
                                <input type="submit" value="Filter" class="btn btn-filters ms-auto">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Expense name</th>
                        <th>Date</th>
                        <th>Amount(₦)</th>
                        <th>Description</th>
                        <th>Created By</th>

                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td>@Html.DisplayFor(modelitem => item.Name)</td>
                            <td>@Html.DisplayFor(modelitem => item.Date)</td>
                            <td>@Html.DisplayFor(modelitem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelitem => item.description)</td>

                            <td>@Html.DisplayFor(modelitem => item.CreatedBy)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("EditExpense", "Expenses", new {ID=item.Id})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3 " href="@Url.Action("DeleteConfirmedExpense", "Expenses", new {id=item.Id})" onclick="return confirm('Are you sure you want to delete this?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>

                    </tbody>
                }
            </table>
        </div>
    </div>
</div>



